# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# GitHub Configuration (Legacy - for personal access token)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# GitHub App Configuration (Recommended)
GITHUB_APP_ID=your_app_id_here
GITHUB_APP_CLIENT_ID=your_client_id_here
GITHUB_APP_CLIENT_SECRET=your_client_secret_here
GITHUB_APP_INSTALLATION_ID=your_installation_id_here
GITHUB_APP_PRIVATE_KEY_PATH=./your-app-name.private-key.pem
# Or use private key content directly (for production/Railway):
# GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# Pydantic Logfire (Optional - for observability)
LOGFIRE_TOKEN=your_logfire_token_here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Review Configuration
MAX_FILES_PER_REVIEW=10
MAX_RETRIES=2
REVIEW_TEMPERATURE=0.3

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Pinecone Configuration (for RAG knowledge base)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=code-style-guides

# RAG Configuration
RAG_ENABLED=True
EMBEDDING_MODEL=text-embedding-3-small
RAG_TOP_K=3
RAG_MIN_SIMILARITY=0.5
